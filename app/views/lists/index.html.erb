<div class="container">
  <%= image_tag "/assets/banner-1155437_1280-a524a924c48eeaee33fbf147b02f7e671c9ec3063e9e0273d7066fae1addd3f3.png" , class: 'widen-to-parent' %>
  <h2 id="genial">Your Lists</h2>
  <%= link_to "Add a new list!", new_list_path, class:"btn btn-primary" %>
  <ul class = "p-0 my-2 list_index">
    <% @lists.each do |list| %>
      <li class= "list-group-item text-center my-2"><%= link_to list.name, list_path(list) %></li>
      <%# <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
  <%= link_to "Delete #{list.name}'s list", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: 'index_delete btn btn-danger text-white'%>
    <% end %>
  </ul>
</div>
